        <Button Content="Dodaj" Width="80" Name="btDodaj" FontSize="20" Click="Dodaj" HorizontalAlignment="Right"  RenderTransformOrigin="2.498,0.231" Margin="0,370,0,-401"/>
        <Label x:Name="label" Content="Sortiraj po:" HorizontalAlignment="Left" Height="42" Margin="0,19,0,-52" VerticalAlignment="Top" Width="104" RenderTransformOrigin="0.125,0.5"/>
        <Button x:Name="button" Content="Sortiraj" Click="Sortiraj_Click" Grid.Column="3" HorizontalAlignment="Left" Height="22" Margin="19,19,0,-32" VerticalAlignment="Top" Width="72"/>
        <ComboBox x:Name="cbSP" Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="10,19,0,-32" VerticalAlignment="Top" Width="109"/>
        <ComboBox x:Name="cbR" Grid.Column="2" HorizontalAlignment="Left" Height="22" Margin="10,19,0,-32" VerticalAlignment="Top" Width="94"/>
        <Label x:Name="label1" Content="Pretrazi po:" HorizontalAlignment="Left" Height="25" Margin="0,73,0,-89" VerticalAlignment="Top" Width="94"/>
        <ComboBox x:Name="cbP" Grid.Column="1" HorizontalAlignment="Left" Height="25" Margin="10,73,0,-89" VerticalAlignment="Top" Width="109"/>
        <TextBox x:Name="tbP" Grid.ColumnSpan="2" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="0,73,0,-87" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="115" RenderTransformOrigin="0.492,0.217"/>
        <Button x:Name="button1" Content="Pretrazi" Click="Pretrazi_Click" Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="19,73,0,-87" VerticalAlignment="Top" Width="74"/>

    </Grid>

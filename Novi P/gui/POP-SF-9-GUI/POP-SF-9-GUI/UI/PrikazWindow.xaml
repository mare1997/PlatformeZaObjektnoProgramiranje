            <ColumnDefinition Width="114*"/>
            <ColumnDefinition Width="104*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8"/>
        </Grid.RowDefinitions>
        <DataGrid CanUserAddRows="False"  AutoGeneratingColumn="dgPrikaz_AutoGeneratingColumn" Name="dgPrikaz" Grid.Row="0" FontSize="15" Margin="0,119,1,-340" Grid.ColumnSpan="4"  >
